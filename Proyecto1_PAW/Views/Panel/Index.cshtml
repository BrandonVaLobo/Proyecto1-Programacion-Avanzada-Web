@{
    ViewBag.Title = "Panel del Docente";
    var usuario = ViewBag.Usuario as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Panel del Docente</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            color: #333;
            margin: 30px;
        }

        h2 {
            color: #004a99;
            margin-bottom: 10px;
        }

        p {
            font-size: 16px;
        }

        hr {
            border: none;
            border-top: 1px solid #ccc;
            margin: 20px 0;
        }

        ul {
            list-style-type: none;
            padding: 0;
            max-width: 400px;
        }

        li {
            background-color: #fff;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            padding: 10px 15px;
            transition: background-color 0.2s;
        }

            li:hover {
                background-color: #eaf2ff;
            }

        a {
            text-decoration: none;
            color: #004a99;
            font-weight: 600;
            display: block;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <h2>Panel principal del docente</h2>

    <p>Bienvenido, <strong>@usuario</strong></p>
    @if (Session["Rol"] != null)
    {
        <p><strong>Rol actual:</strong> @Session["Rol"]</p>
    }

    <hr />

    <ul>
        @if (Session["Rol"] != null)
        {
            var rol = Session["Rol"].ToString();

            if (rol.Contains("Coordinador") || rol.Contains("Docente"))
            {
                <li><a href="/Estudiante/Crear">Registro de Estudiantes</a></li>
                <li><a href="/Evaluacion/Index">Evaluación por Estudiante</a></li>
                <li><a href="/Panel/Seguimiento">Panel de Seguimiento</a></li>
                <li><a href="/Historial/Index">Historial Académico</a></li>
            }

            if (rol.Contains("Coordinador"))
            {
                <li><a href="/DocenteCurso/Index">Asignar Docentes</a></li>
            }

            if (rol.Contains("Administrador"))
            {
                <li><a href="/Curso/Index">Gestión de Cursos</a></li>
                <li><a href="/Rol/Index">Gestión de Roles</a></li>
                <li><a href="/Bitacora/Index">Ver Bitácora del Sistema</a></li>
            }
        }

        <li><a href="/Cuenta/Logout">Cerrar Sesión</a></li>
    </ul>

</body>
</html>


