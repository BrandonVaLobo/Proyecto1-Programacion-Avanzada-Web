@model Proyecto1_PAW.Models.CursoModel
@{
    ViewBag.Title = "Editar curso";
    var cuatrimestres = ViewBag.Cuatrimestres as List<KeyValuePair<int, string>>;
}

<style>
    body {
        font-family: Arial, sans-serif;
    }

    h2 {
        color: #004a99;
        margin-bottom: 20px;
    }

    form {
        max-width: 450px;
    }

    label {
        font-weight: bold;
        margin-top: 12px;
        display: block;
    }

    input, select, textarea {
        width: 100%;
        padding: 6px 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-top: 5px;
        font-size: 14px;
    }

    textarea {
        resize: vertical;
        min-height: 80px;
    }

    button {
        background-color: #004a99;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        margin-top: 15px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0066cc;
        }

    #msg {
        margin-top: 15px;
        font-weight: bold;
    }
</style>

<p>
    <a href="/Panel/Index">Volver al Panel</a>
</p>

<h2>Editar curso</h2>

<form id="formEditar">
    <input type="hidden" id="id" value="@Model.Id" />

    <p><strong>Código:</strong> @Model.Codigo</p>

    <label>Nombre:</label>
    <input type="text" id="nombre" value="@Model.Nombre" required /><br />

    <label>Descripción:</label>
    <textarea id="descripcion">@Model.Descripcion</textarea><br />

    <label>Créditos:</label>
    <input type="number" id="creditos" value="@Model.Creditos" min="1" max="10" /><br />

    <label>Cuatrimestre:</label>
    <select id="cuatrimestre">
        @foreach (var c in cuatrimestres)
        {
            <option value="@c.Key" @(c.Key == Model.CuatrimestreId ? "selected" : "")>@c.Value</option>
        }
    </select><br />

    <button type="submit">Guardar cambios</button>
</form>

<div id="msg"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$("#formEditar").submit(function (e) {
    e.preventDefault();
    $.ajax({
        url: "/Curso/GuardarEdicion",
        type: "POST",
        data: {
            id: $("#id").val(),
            nombre: $("#nombre").val(),
            descripcion: $("#descripcion").val(),
            creditos: $("#creditos").val(),
            cuatrimestreId: $("#cuatrimestre").val()
        },
        success: function (resp) {
            $("#msg").text(resp.message);
            if (resp.success) {
                setTimeout(() => window.location.href = "/Curso/Index", 1000);
            }
        },
        error: function () {
            $("#msg").text("Error al guardar los cambios.");
        }
    });
});
</script>
