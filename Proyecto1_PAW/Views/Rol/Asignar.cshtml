@model List<Proyecto1_PAW.Models.RolModel>

@{
    ViewBag.Title = "Asignar Roles";
    var asignados = ViewBag.Asignados as List<int>;
}

<style>
    form {
        text-align: left;
        margin-top: 10px;
        line-height: 1.8;
    }

        form label {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 15px;
        }

    input[type="checkbox"] {
        transform: scale(1.1);
        margin-right: 5px;
    }

    button {
        margin-top: 15px;
        padding: 6px 12px;
        background-color: #004a99;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0066cc;
        }

    a {
        margin-left: 15px;
        color: #004a99;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<p>
    <a href="/Panel/Index">Volver al Panel</a>
</p>

<h2>Asignar Roles al Docente: @ViewBag.DocenteNombre</h2>

<form method="post" action="/Rol/GuardarRoles">
    <input type="hidden" name="docenteId" value="@ViewBag.DocenteId" />

    @foreach (var rol in Model)
    {
        <label>
            <input type="checkbox" name="roles" value="@rol.Id"
                   @(asignados.Contains(rol.Id) ? "checked" : "") />
            @rol.Nombre
        </label>
    }

    <button type="submit">Guardar Cambios</button>
    <a href="/Rol/Index">Volver</a>
</form>
